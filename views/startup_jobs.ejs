<!-- student page -->
<!DOCTYPE html>

<html>
    <head>
        <!--<title>INTERNet</title> -->
        <meta name = "description" content = "home page for intern web application">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link href="/css/jobs.css" rel="stylesheet" type="text/css">
        <link href="https://fonts.googleapis.com/css?family=Bebas+Neue|Lato|Monteserrat|M+PLUS+Rounded+1c|Poppins&display=swap" rel="stylesheet">
    </head>

    <body id = "page">
        <header>
            <div class = "logo">
                <p id = "username"><%= startup.name %></p>
            </div>
            <div class = "header">
                <div class = "nolist">
                    <ul id = "biglist">
                        <li><input type="text" placeholder="Search.."></li>
                        <li><a id = "about" href="/startup/job/new">Add Job</a></li>
                        <li><a id = "accomplishments" href="index.html">Logout</a></li>
                    </ul>
                </div>
            </div>
        </header>

        <div id = "job offers">
            <div id = "jobtext">
                <p>Jobs:</p>
            </div>
<% startup.jobs.forEach(job => { %>
    

            <div class="row">
              
                <div class="column2">
                  <div class="card">
                      <div>
                        <h3 id = "name"> <%= job.title %> </h3>
                      </div>
                  </div>
                </div>
                
                <div class="column3">
                  <div class="card">
                      <div>
                        <h3><%= job.description %></h3>
                      </div>
                  </div>
                </div>

                <div class="column4">
                    <div class="card">
                        <div>
                            <h3><%= job.skills %></h3>
                        </div>
                    </div>
                  </div>

                <div class="column5">
                    <div class="card">
                        <div>
                          <a href="/home/startup/applicants"><h3>View Potential Applicants</h3></a>
                        </div>
                    </div>
                  </div>

              </div>
        </div>
<%    }); %>
    </body>
</html>

